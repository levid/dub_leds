    %section#dub
      %section.wrapper

        %header
          %nav.user
            %ul
              - if user_signed_in?
                %li
                  = "Welcome, " + current_user.name
              - else
                %li
                  = "Welcome, Guest"
              %li.divline
                %span
              %li 
                - if user_signed_in?
                  = link_to('Admin', admins_path, :class => "fade #{'active' if controller_name === 'admins'}")
