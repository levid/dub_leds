                %li 
                  = link_to('My Account', edit_user_registration_path, :class => "my_account #{'active' if controller_name === 'registrations' }")
                %li 
                  = link_to('Logout', destroy_user_session_path, :class => 'log_out', :method=>'delete')
              - else
                %li
                  = link_to('Sign In', new_user_session_path, :class => "sign_in #{'active' if controller_name === 'sessions' }")
                %li
                  = link_to('Sign up', new_user_registration_path, :class => "sign_up #{'active' if controller_name === 'registrations' }")
              
          %nav.main
            %ul.topnav  
              %li= (link_to "Home", home_path, :id => "home", :class => controller_name === "home" ? "active" : "")
              %li= (link_to "Technology", technology_path, :id => "technology", :class => controller_name === "technology" ? "active" : "")
              %li= (link_to "Media", media_path, :id => "media", :class => controller_name === "media" ? "active" : "")
              %li= (link_to "Generator", generator_path, :id => "generator", :class => controller_name === "generator" ? "active" : "")
              %li= (link_to "Order", order_path, :id => "order", :class => controller_name === "order" ? "active" : "")
              %li= (link_to "Contact", contact_path, :id => "contact", :class => controller_name === "contact" ? "active" : "")
            .glow
          %section.logo

        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_\#{name}" if msg.is_a?(String)

        = yield
        %footer
          %section.footer-container
            .left-column
              .logo
              .email-updates
