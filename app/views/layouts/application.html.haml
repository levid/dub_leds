= render 'layouts/header'
%body{:class => "#{controller_name.capitalize} #{action_name.capitalize}"}
  %section#dub
    %section.wrapper
      #sema-tag
        %a{:href => 'http://www.semashow.com/press/2012/11/01/dub-leds-the-worlds-most-technologically-advanced-rim', :target => '_blank'}
      %header
        %nav
          = render 'layouts/user_nav'
          = render 'layouts/main_nav'
          = flash_messages
        %section.logo

      = yield
        
      = render 'layouts/footer'

      #modal_global_progress
        .spinner

  :javascript
    _gaq = _gaq or []
    _gaq.push ["_setAccount", "UA-35958105-1"]
    _gaq.push ["_trackPageview"]
    (->
      ga = document.createElement("script")
      ga.type = "text/javascript"
      ga.async = true
      ga.src = ((if "https:" is document.location.protocol then "https://ssl" else "http://www")) + ".google-analytics.com/ga.js"
      s = document.getElementsByTagName("script")[0]
      s.parentNode.insertBefore ga, s
    )()