= render 'layouts/header'
%body{:class => "#{controller_name.capitalize} #{action_name.capitalize}"}
  %section#dub
    %section.wrapper
      #sema-tag
        %a{:href => 'http://www.semashow.com/press/2012/11/01/dub-leds-the-worlds-most-technologically-advanced-wheel', :target => '_blank'}
      %header
        %nav
          = render 'layouts/user_nav'
          = render 'layouts/main_nav'
          = flash_messages
        %section.logo

      = yield
        
      = render 'layouts/footer'

      #modal_global_progress
        .spinner

