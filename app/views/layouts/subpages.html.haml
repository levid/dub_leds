= render 'layouts/header'
%body{:class => "#{controller_name.capitalize} #{action_name.capitalize}"}
  %section#dub
    %section.wrapper
      %header
        %nav
          = render 'layouts/user_nav'
          = render 'layouts/main_nav'
          = flash_messages
        %section.logo

      %section.body
        %section.content-container.interior
          .content{:class => "#{controller_name}"}
            .title-container
              
              = yield

      .push

    = render 'layouts/footer'
    
    #modal_global_progress
      .spinner