= render 'layouts/header'
%body{:class => "#{controller_name.capitalize} #{action_name.capitalize}"}
  %section#dub
    %section.wrapper
      %header
        = render 'layouts/user_nav'
        = render 'layouts/main_nav'
        %section.logo

      / - flash.each do |name, msg|
      /         = content_tag :div, msg, :id => "flash_\#{name}" if msg.is_a?(String)

      = flash_messages

      %section.body
        %section.content-container.interior
          .content
            .title-container
              -# .title="#{controller_name.capitalize}"

              = yield
      .push

    = render 'layouts/footer'
