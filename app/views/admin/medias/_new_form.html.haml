= form_for @media, :url => admin_medias_path(:id => @media.id), :html => {:multipart => true} do |f|
  / - if @media.errors.any?
  /     #error_explanation
  /       %h2
  /         = pluralize(@media.errors.count, "error")
  /         prohibited this medium from being saved:
  /       %ul
  /         - @media.errors.full_messages.each do |msg|
  /           %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :video_url
    = f.text_field :video_url
  .field
    .border.pad.bottom10
      = f.label :thumbnail
      = f.file_field :thumbnail
  .submit
    = f.submit "Save", :class => 'orange'
