= form_for @media, :url => admin_media_path(:id => @media.id), :method => 'put', :html => {:multipart => true} do |f|
  / - if @media.errors.any?
  /     #error_explanation
  /       %h2
  /         = pluralize(@media.errors.count, "error")
  /         prohibited this medium from being saved:
  /       %ul
  /         - @media.errors.full_messages.each do |msg|
  /           %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :video_url
    = f.text_area :video_url
  .field
    = image_tag(@media.thumbnail.url) if @media.thumbnail.url.present?
    = f.label :thumbnail
    = f.file_field :thumbnail
  - if @media.thumbnail.url.present?
    .field
      = f.label :remove_thumbnail
      = f.check_box :remove_thumbnail
      = f.hidden_field :thumbnail_cache
  .actions
    = f.submit 'Save'
