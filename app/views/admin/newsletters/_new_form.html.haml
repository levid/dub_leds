= form_for @newsletter, :url => admin_newsletters_path(:id => @newsletter.id), :html => {:multipart => true} do |f|
  / - if @newsletter.errors.any?
  /     #error_explanation
  /       %h2
  /         = pluralize(@newsletter.errors.count, "error")
  /         prohibited this newsletter from being saved:
  /       %ul
  /         - @newsletter.errors.full_messages.each do |msg|
  /           %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .submit
    = f.submit "Save", :class => 'orange'