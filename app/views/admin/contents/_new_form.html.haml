= form_for @content, :url => admin_contents_path(:id => @content.id), :html => {:multipart => true} do |f|
  / - if @content.errors.any?
  /         #error_explanation
  /           %h2
  /             = pluralize(@content.errors.count, "error")
  /             prohibited this content from being saved:
  /           %ul
  /             - @content.errors.full_messages.each do |msg|
  /               %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :sub_title
    = f.text_field :sub_title
  .field
    = f.label :description
    = f.text_area :description
  .submit
    = f.submit 'Save', :class => 'orange'
