= form_for @resource, :url => admin_resources_path(:id => @resource.id), :html => {:multipart => true} do |f|
  / - if @resource.errors.any?
  /         #error_explanation
  /           %h2
  /             = pluralize(@resource.errors.count, "error")
  /             prohibited this resource from being saved:
  /           %ul
  /             - @resource.errors.full_messages.each do |msg|
  /               %li= msg

  .field
    = f.label :resource_type
    = f.text_field :resource_type
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :sub_title
    = f.text_field :sub_title
  .field
    = f.label :description
    = f.text_area :description
  .submit
    = f.submit 'Save', :class => 'orange'
