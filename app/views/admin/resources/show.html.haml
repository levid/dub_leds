.title="Viewing: #{@resource.title}"
.text-container
  %fieldset
    %legend Resource Information
    .table
      .field
        %b Type:
        .grey= @resource.resource_type
      .field
        %b Title:
        .grey= @resource.title
      .field
        %b Sub title:
        .grey= @resource.sub_title
      .field
        %b Description:
        .grey= @resource.description

  %fieldset
    %legend Other options
    .links
      = link_to 'Edit Resource', edit_admin_resource_path(@rim), :class => 'btn blue'
      = link_to 'Back to list', admin_resources_path, :class => 'btn black pad left5'
