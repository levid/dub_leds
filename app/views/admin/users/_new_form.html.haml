= form_for :user, :url => admin_users_path, :html => {:multipart => true, :class => 'user-form'} do |f|
  -if @user.errors.any?
    error_explanation
    %h2= "#{pluralize(@user.errors.count, "error")} prohibited this rim from being saved:"
    %ul
    - @user.errors.full_messages.each do |msg|
      %li= msg
  = render :partial => 'user_fields', :locals => { :f => f }
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .submit
    = f.submit "Register", :class => 'btn orange'