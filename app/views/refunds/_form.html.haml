= form_for(@refund) do |f|
  - if @refund.errors.any?
    #error_explanation
      %h2
        = pluralize(@refund.errors.count, "error")
        prohibited this refund from being saved:
      %ul
        - @refund.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content
    = f.text_area :content
  .submit
    = f.submit "Submit", :class => 'orange'