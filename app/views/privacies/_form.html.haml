= form_for(@privacy) do |f|
  - if @privacy.errors.any?
    #error_explanation
      %h2
        = pluralize(@privacy.errors.count, "error")
        prohibited this privacy from being saved:
      %ul
        - @privacy.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .actions
    = f.submit
