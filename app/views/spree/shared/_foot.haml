%footer
  %section.footer-container
    .newsletter
      .logo
      .email-updates
        = form_for(main_app.new_newsletter_path) do |f|
          = f.email_field :email, :placeholder => "Enter email for updates"
          = f.submit 'Register'
    .links
      .order
        -# = link_to('Store', main_app.store_path)
      %ul#sharing-links
        %li
          %a.facebook{:href => "#", :title => 'Follow us on Facebook'} Facebook
        %li
          %a.twitter{:href => "#", :title => 'Follow us on Twitter'} Twitter
        %li
          %a.flickr{:href => "#", :title => 'Follow us on Flickr'} Flickr
        %li
          %a.linkedin{:href => "#", :title => 'Email us'} Linkedin
  %section.spacer
    .copyright
      %span (c) 2011 LED Wheels, Inc.
      .links
        = link_to 'Privacy Policy', main_app.privacy_policy_path, :class => "fade"
        = link_to 'Refund Policy', main_app.refund_policy_path, :class => "fade"

