/ no need for thumnails unless there is more then one image
- if product.images.size > 1
  %ul#product-thumbnails.thumbnails.inline{"data-hook" => ""}
    - product.images.each do |i|
      %li.tmb-all{:id => "tmb-#{i.id.to_s}"}= link_to image_tag(i.attachment.url(:mini)), i.attachment.url(:product)
    - if @product.has_variants?
      - @variants.each do |v|
        - if v.available?
          - v.images.each do |i|
            %li{:class => "vtmb-#{v.id.to_s} vtmb", :id => "tmb-#{i.id.to_s}"}= link_to image_tag(i.attachment.url(:mini)), i.attachment.url(:product)
