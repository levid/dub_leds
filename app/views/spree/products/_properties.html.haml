- unless @product_properties.empty?
  %h6.product-section-title= t('properties')
  %table#product-properties.table-display{"data-hook" => "", :width => "100%"}
    %tbody
      - for product_property in @product_properties
      - css_class = cycle('even', 'odd')
        %tr{:class => css_class}
          %td
            %strong= product_property.property.presentation
          %td= product_property.value
